@model List<ArKorespV1.Models.UserNotes>
@{
    Layout = "~/Views/Shared/_LayoutRefreshable.cshtml";
}

<h2 style="padding-top:10px">Notatki użytkownika @ViewBag.uname</h2>

<p>
    <span>
        @Html.ActionLink("Dodaj", "Create", new { username = ViewBag.uname },
         new { @class = "btn btn-primary" })
    </span>
</p>


<table class="table" style="width:110%">
    <tr>
        <th>@Html.DisplayNameFor(mitem => mitem.FirstOrDefault().DDATA) </th>
        <th>@Html.DisplayNameFor(mitem => mitem.FirstOrDefault().DNOTATKA) </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var notki in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => notki.DDATA)
            </td>
            <td>
                @Html.DisplayFor(modelitem => notki.DNOTATKA)
            </td>
            <td>
                @Html.ActionLink(linkText: "Zmień", actionName: "Edit", routeValues: new { id = notki.ID })
                <br />
                @Html.ActionLink(linkText: "Usuń", actionName: "Delete", routeValues: new { id = notki.ID })

            </td>
            <td class="idcolumn">
                @Html.DisplayFor(mi => notki.ID) <br />
                @Html.DisplayFor(mi => notki.SDATA)
            </td>
        </tr>
    }
</table>