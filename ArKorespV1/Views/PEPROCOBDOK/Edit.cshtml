@model ArKorespV1.Models.PEPROCOBDOK
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .longer {
        max-width: 1000%;
    }
</style>
<br />
<h2>Szablon obiegu</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.DNAZWA, htmlAttributes: new { @class = "control-label col-md-3" })

            @Html.EditorFor(model => model.DNAZWA,
                new { htmlAttributes =
                new { @class = "form-control longer"
                        , @placeholder = "Nazwa szablonu"
                        , @style = "width:800px;" } })
            @Html.ValidationMessageFor(model => model.DNAZWA, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DOPIS, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.DOPIS,
                    new { htmlAttributes = new {
                        @class = "form-control longer"
                        ,
                        @rows = 6
                    } })
                @Html.ValidationMessageFor(model => model.DOPIS, "", new { @class = "text-danger" })
            </div>
        </div>


        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </div>

    </div>
}
@Html.ActionLink("Powrót do listy", "Index")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
