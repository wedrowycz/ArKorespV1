@model ArKorespV1.Models.PEZALACZNIKI

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .longer {
        max-width: 1000%;
    }
</style>

<h2 style="padding-top:10px">Zmień metadane o pliku</h2>
<div>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.SDATA)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model._id)
        @Html.HiddenFor(model => model.DDANE)

        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.DNAZWAPLIKU, htmlAttributes: 
                new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.DNAZWAPLIKU, new { htmlAttributes = 
                    new { @class = "form-control longer", @placeholder = "nazwa pliku", @style = "width:800px;" } })
                @Html.ValidationMessageFor(model => model.DNAZWAPLIKU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DOPIS, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.DOPIS, new { htmlAttributes = 
                    new { @class = "form-control longer", @placeholder = "opis", @style = "width:800px;" } })
                @Html.ValidationMessageFor(model => model.DOPIS, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DWERSJA, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.DWERSJA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DWERSJA, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
        </div>
        }
    </div>
<div>
    @Html.ActionLink("Powrót do listy", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




